doctype html
html
    head
        script(src="../../../../angular.min.js")
        script(src="../../../../route.js")
        script(src="../../../../main.js")
        script(src="../../../../jquery-1.3.2.min.js")
        script(src="../../../../bootstrap.min.js")
        link(rel="stylesheet" type="text/css" href="../../../../bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="default.css")
        body
            .container(ng-app="mainApp" ng-controller="mainController" ng-init="book = #{JSON.stringify(content)}")
                table(class="table table-bordered col-md-6 col-md-offset-3")
                    tbody
                        tr
                            td Title
                            td #{content.title}
                        tr
                            td Author
                            td  #{content.author}
                        tr
                            td Price
                            td #{content.price}
                        tr
                            td Availability
                            td #{content.avail}
                .row
                    button(class="btn btn-primary col-md-2 col-md-offset-10") Edit
                div(ng-view="" class="col-md-10 col-md-offset-1")
                        