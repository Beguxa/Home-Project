doctype html
html
        head
                script(src="../../../../angular.min.js")
                script(src="../../../../route.js")
                script(src="../../../../main.js")
                script(src="../../../../jquery-1.3.2.min.js")
                script(src="../../../../bootstrap.min.js")
                link(rel="stylesheet" type="text/css" href="../../../../bootstrap.min.css")
                link(rel="stylesheet" type="text/css" href="default.css")
        body
                div(ng-app="authorApp" ng-controller="authorController" ng-init="Author = #{JSON.stringify(content)}")
                    table(class="table table-bordered col-md-6 col-md-offset-3")
                        tbody
                            tr
                                td Name
                                td {{Author.authorName}}
                            tr
                                td Email ID
                                td {{Author.email}}
                            tr
                                td Department
                                td {{Author.dept}}
                            tr
                                td Website
                                td {{Author.website}}
                            tr
                                td skills
                                td {{Author.skills}}
                    .row
                        button(class="btn btn-primary col-md-2 col-md-offset-10") Edit
                    div(ng-view="" class="col-md-10 col-md-offset-1")
                    button(class="btn btn-default" ng-click="delete('author')") Delete